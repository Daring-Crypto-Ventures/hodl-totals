{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES2020",
        "outDir": "./dist",
        "rootDirs": ["./src", "/tests"],
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "sourceMap": false
    },
    "include": [
      "src/**/*",
      "tests/**/*"
    ]
}
